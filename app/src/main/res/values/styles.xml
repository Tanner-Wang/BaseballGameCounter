<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#03A9F4</item>
        <item name="colorPrimaryDark">#0288D1</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="colorButtonNormal">#03A9F4</item>
    </style>

    <style name="CodeFont1" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_small</item>
        <item name="android:layout_marginLeft">@dimen/margin_left_large</item>
        <item name="android:layout_marginRight">@dimen/margin_right_large</item>
        <item name="android:background">@drawable/click</item>
    </style>

    <style name="CodeFont2" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/team_name_size</item>
    </style>

    <style name="CodeFont3" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:text">@string/score</item>
        <item name="android:textSize">@dimen/score_text_size</item>
    </style>

</resources>
